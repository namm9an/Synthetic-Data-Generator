# Application Configuration
APP_ENV=development
APP_HOST=127.0.0.1
APP_PORT=8000
LOG_LEVEL=debug
DEBUG=True

# Database Configuration
# Replace with your PostgreSQL connection string
DATABASE_URL=postgresql://username:password@host:port/database

# Hugging Face Configuration
# Optional: HuggingFace token for accessing private models
HF_TOKEN=your_huggingface_token_here

# Model Configuration
MODEL_NAME=stabilityai/sdxl-turbo
GENERATION_OUTPUT_DIR=./data/output

# FRONTEND CONFIG
VITE_API_URL=http://127.0.0.1:8000

# Hugging Face Cache Configuration (automatically set by the application)
# These are set programmatically to use D: drive cache
# HF_HOME=D:\Academics\.cache\huggingface
# HUGGINGFACE_HUB_CACHE=D:\Academics\.cache\huggingface\hub
# TRANSFORMERS_CACHE=D:\Academics\.cache\huggingface\transformers
# HF_DATASETS_CACHE=D:\Academics\.cache\huggingface\datasets
